{
  "_comment": "This is installed automatically by install.sh with the correct path to claude-hook-wrapper.sh",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && /path/to/claude-dotfiles/scripts/claude-hook-wrapper.sh just fmt lint test",
            "timeout": 120
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(just info:*)",
      "Bash(just fmt:*)",
      "Bash(just lint:*)",
      "Bash(just test:*)",
      "Bash(uv run:*)"
    ],
    "deny": [],
    "ask": []
  }
}
