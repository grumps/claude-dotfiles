{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && just fmt lint test",
            "timeout": 120
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(just info:*)",
      "Bash(just fmt:*)",
      "Bash(just lint:*)",
      "Bash(just test:*)",
      "Bash(uv run:*)"
    ],
    "deny": [],
    "ask": []
  }
}
